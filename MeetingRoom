package com.example.reserveameetingroom;

import android.os.Bundle;

import com.google.android.material.floatingactionbutton.FloatingActionButton;
import com.google.android.material.snackbar.Snackbar;

import androidx.appcompat.app.AppCompatActivity;
import androidx.appcompat.widget.Toolbar;

import android.view.View;
import android.view.Menu;
import android.view.MenuItem;
import android.view.WindowManager;
import android.widget.Button;
import android.widget.TextView;

public class MainActivity extends AppCompatActivity {

    @Override
    protected void onCreate(Bundle savedInstanceState) {
        super.onCreate(savedInstanceState);
        getWindow().setFlags(WindowManager.LayoutParams.FLAG_FULLSCREEN, WindowManager.LayoutParams.FLAG_FULLSCREEN);
        getWindow().getDecorView().setSystemUiVisibility(View.SYSTEM_UI_FLAG_HIDE_NAVIGATION | View.SYSTEM_UI_FLAG_IMMERSIVE_STICKY);
        getWindow().getDecorView().setBackgroundColor(getColor(R.color.green));
        setContentView(R.layout.activity_main);
        /*Toolbar toolbar = findViewById(R.id.toolbar);
        setSupportActionBar(toolbar);*/

        //set text for textView field
        final TextView meeting_room = findViewById(R.id.textView1);
        meeting_room.setText(R.string.meeting_room);

        final TextView nume_ocupant = findViewById(R.id.textView3);

        final Button reserve_button = findViewById(R.id.button);
        reserve_button.setOnClickListener(new View.OnClickListener() {
            @Override
            public void onClick(View view) {

                TextView meeting_room_status = findViewById(R.id.textView2);
                if (meeting_room_status.getText().equals("Liber")) {
                    meeting_room_status.setText(getString(R.string.meeting_room_status_ocupat));
                    meeting_room_status.setTextColor(getColor(R.color.white));
                    getWindow().getDecorView().setBackgroundColor(getColor(R.color.red));
                    meeting_room_status.setBackgroundColor(getColor(R.color.red));
                    reserve_button.setText(getString(R.string.reset_metting));
                    nume_ocupant.setText("Laura");

                }
                else
                {
                    meeting_room_status.setText(getString(R.string.meeting_room_status_liber));
                    meeting_room_status.setTextColor(getColor(R.color.white));
                    getWindow().getDecorView().setBackgroundColor(getColor(R.color.green));
                    meeting_room_status.setBackgroundColor(getColor(R.color.green));
                    reserve_button.setText(getString(R.string.set_meeting));
                    nume_ocupant.setText("");
                }
            }
        });
    }

    @Override
    public boolean onCreateOptionsMenu(Menu menu) {
        // Inflate the menu; this adds items to the action bar if it is present.
        getMenuInflater().inflate(R.menu.menu_main, menu);
        return true;
    }

    @Override
    public boolean onOptionsItemSelected(MenuItem item) {
        // Handle action bar item clicks here. The action bar will
        // automatically handle clicks on the Home/Up button, so long
        // as you specify a parent activity in AndroidManifest.xml.
        int id = item.getItemId();

        //noinspection SimplifiableIfStatement
        if (id == R.id.action_settings) {
            return true;
        }

        return super.onOptionsItemSelected(item);
    }
}
